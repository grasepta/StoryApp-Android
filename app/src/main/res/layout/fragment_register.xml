<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".auth.register.RegisterFragment">


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="5dp"
        android:text="Daftar"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayoutName"
        style="@android:style/TextAppearance.Widget.EditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/space_jumbo"
        android:layout_marginTop="@dimen/space_xxxxjumbo"
        android:alpha="0"
        app:errorEnabled="true"
        app:errorTextColor="@color/red_error"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.313"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        tools:alpha="100">

        <com.grasepta.storyapp.base.customview.CustomEditText
            android:id="@+id/ed_register_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_jumbo"
            android:alpha="0"
            android:gravity="center|start"
            android:hint="Name"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:textColor="@color/black"
            app:layout_constraintVertical_bias="0.274"
            tools:alpha="100" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:alpha="0"
        tools:alpha="100"
        android:id="@+id/textInputLayoutPassowrd"
        style="@android:style/TextAppearance.Widget.EditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/space_jumbo"
        app:errorEnabled="true"
        app:errorIconDrawable="@null"
        app:passwordToggleEnabled="true"
        app:passwordToggleTint="@color/black"
        app:errorTextColor="@color/red_error"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayoutEmail">

        <com.grasepta.storyapp.base.customview.CustomEditText
            android:alpha="0"
            tools:alpha="100"
            android:id="@+id/ed_register_password"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_jumbo"
            android:gravity="center|start"
            android:hint="Kata Sandi"
            android:imeOptions="actionNext"
            android:inputType="textPassword"
            android:textColor="@color/black" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:alpha="0"
        tools:alpha="100"
        android:id="@+id/textInputLayoutEmail"
        style="@android:style/TextAppearance.Widget.EditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/space_jumbo"
        app:errorEnabled="true"
        app:errorIconDrawable="@null"
        app:errorTextColor="@color/red_error"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayoutName">

        <com.grasepta.storyapp.base.customview.CustomEditText
            android:alpha="0"
            tools:alpha="100"
            android:id="@+id/ed_register_email"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_jumbo"
            android:gravity="center|start"
            android:hint="Email"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:textColor="@color/black" />

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:alpha="0"
        tools:alpha="100"
        android:id="@+id/btnRegister"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/space_xxxjumbo"
        android:background="@drawable/btn_background"
        android:text="Daftar"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/textInputLayoutPassowrd"
        app:layout_constraintStart_toStartOf="@+id/textInputLayoutPassowrd" />



</androidx.constraintlayout.widget.ConstraintLayout>